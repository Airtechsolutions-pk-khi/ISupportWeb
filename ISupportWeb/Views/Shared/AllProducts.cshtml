<div class="tab-content">
    <div class="tab-pane active" id="grid">
        <div class="shop-product-wrap">
            @ViewBag.Message
            <div class="row all-items">
                @foreach (var item in ViewBag.shopList)
                {
                    <div class="col-lg-4 col-6">
                        <div class="single-product-wrap" style="box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;border-radius:5px;">
                            <div class="product-image card hovereffect imgcon">
                                @if (item.Image == "" || item.Image == null)
                                {
                                     
                                    <a class="img-a" href="@Url.Action("ProductDetails", "Product", new { ItemID = item.ItemID })">
                                        <img src="~/Content/assets/images/NA.png" alt="@item.Name">
                                    </a>
                                    <a class="wl" onclick="addtoWishlist(@item.ItemID, '@item.Title', '@item.Image',@item.Price, '@item.InStock.ToString()',1);toast('Item Added to wishlist', 1); return false; "><i class="ion-android-favorite-outline fill"></i></a>
                                    @*</div>*@
                                }
                                else
                                {
                                     
                                    <a class="img-a" href="@Url.Action("ProductDetails", "Product", new { ItemID = item.ItemID })">
                                        <img src="@Configuration["ImageBaseUrl"].ToString()@item.Image" alt="@item.Name">
                                    </a>
                                    <a class="wl" onclick="addtoWishlist(@item.ItemID, '@item.Name', '@item.Image',@item.DiscountedPrice, '@item.InStock.ToString()',1);toast('Item Added to wishlist', 1); return false; "><i class="ion-android-favorite-outline fill"></i></a>
                                    @*</div>*@
                                }
                                 
                            </div>
                            <div class="row" style="padding:10px; ">
                                <div class="col-8">
                                    <div class="mt-0  product-content">
                                        <p class="mob" style="text-align:left;"> <a class="mob" style="font-size: 18px; font-weight: 700" href="@Url.Action("ProductDetails", "Product", new { ItemID = item.ItemID })"> @item.Title </a></p>

                                        @if (item.DiscountedPrice == null || item.DiscountedPrice == 0)
                                        {
                                            <div class="price-box" style="text-align:left;">
                                                <span style="font-weight: 600" class="currency-text mx-0 text-default"></span><span style="font-weight: 600" class="new-price mx-0">@item.Price</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="price-box" style="text-align:left; ">
                                                <span class="currency-text mx-0"></span><span class="old-price mx-0">@item.Price</span>
                                                <span class="currency-text mx-0 text-default"></span><span class="new-price mx-0">@item.DiscountedPrice</span>
                                            </div>
                                        }

                                         
                                    </div>
                                </div>
                                <div class="col-4" style="text-align:right;">
                                    <div class="mobview">
                                        @if (item.DiscountedPrice == null || item.DiscountedPrice == 0)
                                        {
                                            <button class="add-button" onclick="addtocart(@item.ItemID,'@item.Name','@item.Image',@item.Price,1);toast('Item Added to Cart', 1); return false;">
                                                <span class="ion-android-add add-icon"></span>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="add-button" onclick="addtocart(@item.ItemID,'@item.Name','@item.Image',@item.DiscountedPrice,1);toast('Item Added to Cart', 1); return false;">
                                                <span class="ion-android-add add-icon"></span>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="tab-pane" id="list">
        <div class="shop-product-list-wrap all-list-items">
            @ViewBag.Message
            @foreach (var item in ViewBag.shopList)
            {
                <div class="row product-layout-list">
                    <div class="col-lg-6">
                        <!-- single-product-wrap start -->
                        <div class="single-product-wrap">
                            <div class="product-image ">
                                @if (item.Image == "" || item.Image == null)
                                {
                                    <a href="@Url.Action("ProductDetails", "Product", new { ItemID = item.ItemID })"><img src="~/Content/assets/images/NA.png" alt="@item.Title"></a>
                                }
                                else
                                {
                                    <a href="@Url.Action("ProductDetails", "Product", new { ItemID = item.ItemID })"><img src="@Configuration["ImageBaseUrl"].ToString()@item.Image" alt="@item.Name"></a>
                                }


                                @if (item.DiscountedPrice == null || item.DiscountedPrice == 0)
                                {
                                    <div class="product-action">
                                        <a class="add-to-cart addItemLS btnalert" onclick="addtocart(@item.ItemID,'@item.Name','@item.Image',@item.Price,1);toast('Item Added to Cart', 1); return false;"><i class="ion-bag"></i></a>
                                        <a class="wishlist" onclick="addtoWishlist(@item.ItemID, '@item.Name', '@item.Image',@item.Price, '@item.InStock.ToString()',1);toast('Item Added to wishlist', 1); return false; "><i class="ion-android-favorite-outline"></i></a>
                                    </div>
                                }
                                else
                                {
                                    <div class="product-action">
                                        <a class="add-to-cart addItemLS btnalert" onclick="addtocart(@item.ItemID,'@item.Name','@item.Image',@item.DiscountedPrice,1);toast('Item Added to Cart', 1); return false;"><i class="ion-bag"></i></a>
                                        <a class="wishlist" onclick="addtoWishlist(@item.ItemID, '@item.Name', '@item.Image',@item.DiscountedPrice, '@item.InStock.ToString()',1);toast('Item Added to wishlist', 1); return false; "><i class="ion-android-favorite-outline"></i></a>
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- single-product-wrap end -->
                    </div>
                    <div class="col-lg-8 align-self-center">
                        <div class="product-content text-left">

                            <h4><a href="@Url.Action("ProductDetails", "Product", new { ItemID = item.ItemID })">@item.Name</a></h4>
                           
                            @if (item.DiscountedPrice == null || item.DiscountedPrice == 0)
                            {
                                <div class="price-box">
                                    <span class="new-price ">BHD @item.Price</span>
                                </div>
                            }
                            else
                            {
                                <div class="price-box">
                                    <span class="old-price ">BHD @item.Price</span>
                                    <span class="new-price ">BHD @item.DiscountedPrice</span>
                                </div>
                            }
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


