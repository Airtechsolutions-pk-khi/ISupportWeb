<style>
    .btn-default {
        color: white !important;
        background-color: #152b3c !important;
        border-color: #152b3c !important;
    }

        .btn-default:hover {
            color: #f9444b !important;
            background-color: white !important;
            border-color: #f9444b !important;
        }

    .btn::before, .btn-2::before {
        position: absolute;
        left: 50%;
        top: 50%;
        height: 0;
        width: 150%;
        background-color: white;
        color: #000 !important;
        transition: all 0.3s ease 0s;
        content: "";
        transform: translateX(-50%) translateY(-50%) rotate(-10deg);
        opacity: 0;
        z-index: -1;
    }

    .shop-item-filter-list li .active {
        color: #f9444b;
    }

    .imgcon .wl {
        position: absolute;
        top: 0;
        right: 0;
        z-index: 2; /* add this to make icon stack over image */
        margin-right: 8px;
        margin-top: 8px;
        border: 1px solid #152b3c !important;
        justify-content: center;
        border-radius: 50%;
        height: 30px;
        width: 30px;
        padding-top: 1%;
    }

    .fill {
        color: #152b3c !important;
    }

    .add-button {
        margin-top: 5% !important;
        background-color: #152b3c !important;
        border: none;
        border-radius: 50%;
        color: white;
        font-weight: 500;
        cursor: pointer;
        padding: 7px 15px;
        transition: background-color 0.3s ease-in-out;
    }

        .add-button:hover {
            background-color: white !important;
            border: 1px solid #f9444b;
        }

            .add-button:hover .add-icon {
                color: black !important;
            }

    .product-content .price-box .new-price {
        color: #152b3c;
    }

    .shop-sidebar h4::before {
        position: absolute;
        content: "";
        background: #152b3c;
        width: 50px;
        height: 2px;
        left: 0;
        bottom: -1px;
    }

    .ui-widget-content .ui-slider-range {
        background: #152b3c;
    }

    .ui-widget-content .ui-state-default:hover {
        background: #f9444b;
    }

    .ui-widget-content .ui-state-default {
        background: #ffffff;
        border: 3px solid #152b3c;
        border-radius: 25px;
        box-shadow: none;
        color: #ffffff;
        cursor: pointer;
        font-weight: normal;
        height: 15px;
        width: 15px;
    }

    .pagination li.active a {
        color: #ffffff;
        background: #152b3c;
        border: 1px solid #152b3c;
    }

    .pagination li a:hover {
        color: #ffffff !important;
        background: #f9444b;
        border: 1px solid #f9444b;
    }
</style>

