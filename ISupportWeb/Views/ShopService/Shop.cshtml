<div class="main-content-wrap shop-page section-ptb">
    <div class="container w-100">
        <div class="row">
            <div class="col-lg-3 d-lg-block d-none order-2 order-lg-1">
                <div class="shop-sidebar-wrap">
                    <div class="shop-sidebar">
                        <h4 class="">FILTER BY TEXT</h4>
                    </div>
                    <div class="input-group input-group-sm my-4">
                        <input type="text" id="txt-desktop" class="form-control " placeholder="Search" aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <a href="javascript:;" class="filterOn btn btn-default btn-small">Search</a>
                        </div>
                    </div>

                    <div class="shop-sidebar mb-30">
                        <div class="d-flex justify-content-between">
                            <div class="">
                                <h4 class="title">CATEGORIES</h4>
                            </div>
                            <div class="">
                                @*<a href="javascript:;" class="filterOn"><i class="ion-ios-search-strong h4 text-default"></i></a>*@
                            </div>
                        </div>

                        <ul class="scroll-style ">
                            @foreach (var item in ViewBag.serviceCat)
                            {
                                <li><label><input type="checkbox" name="Category" class="mr-2" value="@item.ServiceCategoryID">@item.Name</label></li>

                            }
                        </ul>
                    </div>

                     
                    <div class="shop-sidebar mb-30">
                        <div class="d-flex justify-content-between">
                            <div class="">
                                <h4 class="mb-0">FILTER BY PRICE</h4>
                            </div>
                            <div class="">
                                @*<a href="javascript:;" class="filterOn"><i class="ion-ios-search-strong h4 text-default"></i></a>*@
                            </div>
                        </div>
                        <div class="filter-price-content">
                            <form action="#" method="post">
                                <div id="price-slider" class="price-slider"></div>
                                <div class="filter-price-wapper">
                                    <div class="filter-price-cont">
                                        <span>Price: </span>
                                        <div class="input-type">
                                            <input type="text" class="bg-transparent mx-1 pr-0 min-price" style="width:60px !important" readonly="" />
                                        </div>
                                        <span>—</span>
                                        <div class="input-type">
                                            <input type="text" class="bg-transparent mx-1 pr-0 max-price" style="width:65px !important" readonly="" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="sidbar-product shop-sidebar mb-30">
                        <h4 class="title">best Service</h4>

                        @foreach (var item in ViewBag.BestService)
                        {
                            <div class="sidbar-product-inner ">
                                <div class="product-image flex-shrink-0">

                                    @if (item.Image == "" || item.Image == null)
                                    {
                                        <a href="@Url.Action("ProductDetails", "Product", new { ServiceID = item.ServiceID })"><img class="best-seller-img" src="~/Content/assets/images/NA.png" alt="@item.Name"></a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("ProductDetails", "Product", new { ServiceID = item.ServiceID })"><img class="best-seller-img" src="@Configuration["ImageBaseUrl"].ToString()@item.Image" alt="@item.Name"></a>
                                    }
                                </div>
                                <div class="product-content text-left">
                                    <h3 style=" line-height: 1.2; margin-bottom: 11px;"><a href="@Url.Action("ProductDetails", "Product", new { ServiceID = item.ServiceID })">@item.Name</a></h3>
                                     
                                    @if (item.DiscountedPrice == null || item.DiscountedPrice == 0)
                                    {
                                        <div class="price-box">
                                            <span class="currency-text mx-0 text-default"></span><span class="new-price mx-0 "> @item.Price</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="price-box">
                                            <span class="currency-text mx-0"> </span><span class="old-price mx-0"> @item.Price</span>
                                            <span class="currency-text mx-0 text-default"> </span><span class="new-price mx-0 "> @item.DiscountedPrice</span>
                                        </div>
                                    }

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-9 order-1 order-lg-2">
                <div class="shop-product-wrapper">
                    <div class="row">
                        <div class="col">
                            <div class="shop-top-bar">
                                <div class="product-mode">
                                    <ul class="nav shop-item-filter-list" role="tablist">
                                        <li class="active"><a class="active" data-toggle="tab" href="#grid"><i class="ion-ios-keypad-outline"></i></a></li>
                                        <li><a data-toggle="tab" href="#list"><i class="ion-ios-list-outline"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product-short">
                                    <select class="SelectSort nice-select" id="Sort" name="sortby">
                                        <option value="1">Name(A - Z)</option>
                                        <option value="2">Name(Z - A)</option>
                                        <option value="3">Price(Low > High)</option>
                                        <option value="4">Price(High > Low)</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="LoadProduct" class="shop-products-wrap">
                    </div>

                    <div id="divLoader" class="mx-auto w-100 text-center p-5" style="display:none;">
                        <img class="mr-3" src="~/Content/assets/images/item-load.gif" style="width: 33px;" /> <span class="text-warning">Loading ...</span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/Content/assets/js/paginathing.js"></script>
    <script>
        
        $(document).ready(function () {

            $("#LoadProduct").load('@Url.Action("Services", "ShopService")');
            $("#divLoader").hide();

            var Category = [];
            var SubCategory = [];
            var Color = [];

            $('input[name="Category"]').click(function () {
                debugger
                if ($(this).prop("checked") == true) {
                    Category.push($(this).val());
                    var SortID = $(".SelectSort").val();
                    ProductFilter(Category.join(), "", "", "BHD0", "BHD50000", SortID);
                }
                else {
                    var index = Category.indexOf($(this).val());
                    Category.splice(index, 1);
                    var SortID = $(".SelectSort").val();
                    ProductFilter(Category.join(), "", "", "BHD0", "BHD50000", SortID);
                }
            });

            //$('input[name="SubCategory"]').click(function () {
