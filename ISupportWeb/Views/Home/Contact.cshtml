@using Microsoft.AspNetCore.Mvc.Rendering
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <img src="~/assets/isupport-conatct-banner.png" width="1920px" />
</div>

<!-- Page Conttent -->
<div class="page-content section-ptb">
    <div class="container w-100">
        <div class="row">
            <div class="col-lg-7 col-sm-12">
                <div class="contact-form">
                    <div class="contact-form-info">
                        <div class="contact-title">
                            <h3>ANY QUERY</h3>
                        </div>
                        <form action="#" method="post" class="needs-validation" novalidate="" name="myform">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" name="Name" placeholder="Name *" required="">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="email" class="form-control" name="Email" placeholder="Email *" required="">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <input type="number" class="form-control" name="Phone" id="mobileInput" placeholder="Contact *" required="" maxlength="11">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" class="form-control" name="Subject" placeholder="Subject *" required="">
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="Message" placeholder="Message *" rows="5" required=""></textarea>
                            </div>
                            <div class="text-center text-md-left">
                                <button type="submit" class="btn btn-default-opposite"><span>Submit</span></button>
                            </div>
                        </form>
                        <p class="mt-3 text-success">@ViewBag.Contact</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-sm-12">
                <div class="contact-infor">
                    <div class="contact-title">
                        <h3>CONTACT US</h3>
                    </div>

                    <div class="contact-address">
                        <ul>
                            <li><strong>Email : </strong>booking@isupportbh.com</li>
                            <li>
                                <strong>Mobile :</strong> +973 35 601 701
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--// Page Conttent -->
<script>
    document.getElementById("mobileInput").addEventListener("input", function () {
        if (this.value.length > 11) {
            this.value = this.value.slice(0, 11);
        }
    });
</script>